<p id="notice"><%= notice %></p>

<h1>Materiales</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @materiales.each do |materiale| %>
      <tr>
        <td><%= materiale.nombre %></td>
        <td><%= link_to 'Ver', materiale %></td>
        <td><%= link_to 'Editar', edit_materiale_path(materiale) %></td>
        <td><%= link_to 'Destroy', materiale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Material', new_materiale_path %>
