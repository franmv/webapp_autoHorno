<!DOCTYPE html>
<html>

  <head>
    
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <title>Decovi</title>
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag    'bootstrap.min.css', media: 'all', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag    'hoe.css', media: 'all', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag    'ionicons.min.css', media: 'all', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag    'font-awesome.min.css', media: 'all', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag    'morris-0.4.3.min.css', media: 'all', 'data-turbolinks-track' => true %>
    
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  
    <%= javascript_include_tag 'modernizr'%>
        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    
  </head>
  
  <body hoe-navigation-type="vertical" hoe-nav-placement="left" theme-layout="wide-layout">
    
    <%= render 'home/header' %>
    
    <div class="container">
      
      <% flash.each do |name, msg| %>      
        <%= content_tag(:div, msg, class: "alert alert-success") %>
      <% end %>
      
      <%= yield %>
      
    </div>
            <!--Common plugins-->
        <%= javascript_include_tag 'jquery.min.js' %>
        <%= javascript_include_tag 'bootstrap.min.js' %>
        <%= javascript_include_tag 'pace.min.js' %>
        <%= javascript_include_tag 'jquery.slimscroll.min.js' %>
        <%= javascript_include_tag 'app' %>
        <!-- Morris -->
        <%= javascript_include_tag 'raphael-2.1.0.min.js' %>
        <%= javascript_include_tag 'morris' %>
        
        <%= javascript_include_tag 'morris-custo' %>
  </body>
</html>
